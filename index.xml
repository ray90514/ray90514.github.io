	.detail &gt; .info{
		font-size:1rem;	
	}
	.detail &gt; .list{	
		font-size:1rem;
		line-height:2.5em;
	}
	.rate{
		left:65%;
		top:82%;
	}
	.rate &gt; span{
		font-size:2rem;
		margin:-10px 0 0 5px;
	}
}
