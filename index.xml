@import url(&#39;https://fonts.googleapis.com/css2?family=Montserrat&amp;family=Open+Sans:wght@300;400&amp;display=swap&#39;);
.movie-info{
	display: flex;
	justify-content: center;
	flex-flow: row;
	position:relative;
	width:95%;
	height:240px;
	left:2%;
	margin 0 0 3% 0;
}
.poster{
	max-width:auto;
	max-height:100%;
	position:relative;
	
	
	
	box-shadow: 2px 5px 15px rgba(0,0,0,0.5);
	border-radius:5px;
	
}
.detail{
	display:flex;
	flex-flow:column;
	background-color:#282e39;
	width:100%;
	
	
	
	position:relative;
	left:1.5%;
	border-radius:5px;
}
.detail &gt; .title{
	position:relative;
	font-size:24pt;
	
	font-family: &#39;Montserrat&#39;, sans-serif;
	font-weight:400;
	color:white;
	line-height:0.1em;
	
	height:auto;
	
	
}
.detail &gt; .info{
	display:flex;
	justify-content:space-around;
	font-size:10pt;
	font-family: &#39;Montserrat&#39;, sans-serif;
	font-weight:400;
	color:#e3e3e3;
	
	line-height:0.1em;
	margin: 0 0 0 0;
}
.detail &gt; .list{
	color:#c9c9c9;
	font-size:10pt;
	font-family: &#39;Open Sans&#39;, sans-serif;
	font-weight:300;
	
	position:relative;
	
	right:4%;
	list-style:none;
	line-height:3em;
}
.detail &gt; .plot{
	color:#c9c9c9;
	font-size:10pt;
	font-family: &#39;Open Sans&#39;, sans-serif;
	font-weight:300;
	position:relative;
	
	left:5%;
	line-height:1.2em;
	
	width:90%;
}
.rate{
	position:absolute;
	left:70%;
	top:85%;
	
}
.rate &gt; span{
	font-size:15pt;
	font-family: &#39;Montserrat&#39;, sans-serif;
	font-weight:400;
	letter-spacing:0;
	color:#e3e3e3;
	margin:-10px 0 0 5px;
}
.rate &gt; i{
	color:orange;
	transform:scale(0.8);
}
@media screen and (max-width: 600px){
    .movie-info{
        display:block;
		
		left:0%;
		height:auto;
    }
	.poster{
		left:25%;
		width:50%;
	}
	.detail{
		left:2.8%;
	}
	.detail &gt; .title{
